<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        app:layout_constraintGuide_percent="0.5"
        android:orientation="horizontal"
        android:layout_width="1dp"
        android:layout_height="1dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.0" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        app:layout_constraintGuide_percent="0.5"
        android:orientation="vertical"
        android:layout_width="1dp"
        android:layout_height="1dp"/>
    <com.yalianxun.exhibition.widget.ScaleLayout
        android:id="@+id/volunteer_develop"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@id/guideline2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="5dp"
        app:layout_constraintRight_toLeftOf="@id/volunteer_service_map">
        <View
            android:layout_margin="2dp"
            android:background="@drawable/society_station_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/policy_map_iv"
            android:contentDescription="@string/picture"
            android:src="@drawable/ic_hospital_appointment"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:layout_width="@dimen/big_image"
            android:layout_height="@dimen/big_image"/>
        <TextView
            android:text="预约挂号"
            android:layout_below="@id/policy_map_iv"
            android:textColor="@color/white_color"
            android:layout_marginTop="70dp"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </com.yalianxun.exhibition.widget.ScaleLayout>
    <com.yalianxun.exhibition.widget.ScaleLayout
        android:id="@+id/volunteer_service_map"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@id/guideline2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/volunteer_develop"
        app:layout_constraintRight_toRightOf="@id/guideline1">
        <View
            android:layout_margin="2dp"
            android:background="@drawable/party_construction_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/policy_guide_iv"
            android:contentDescription="@string/picture"
            android:src="@drawable/ic_hospital_doctor"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:layout_width="@dimen/big_image"
            android:layout_height="@dimen/big_image"/>
        <TextView
            android:text="医疗活动预约"
            android:layout_below="@id/policy_guide_iv"
            android:textColor="@color/white_color"
            android:layout_marginTop="70dp"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </com.yalianxun.exhibition.widget.ScaleLayout>

    <com.yalianxun.exhibition.widget.ScaleLayout
        android:id="@+id/volunteer_activity_registration"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideline"
        app:layout_constraintLeft_toRightOf="@id/guideline1"
        app:layout_constraintRight_toLeftOf="@id/volunteer_train_registration">
        <View
            android:layout_margin="2dp"
            android:background="@drawable/party_information_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:contentDescription="@string/picture"
            android:src="@drawable/ic_hospital_location"
            android:layout_marginTop="60dp"
            android:layout_centerHorizontal="true"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
        <TextView
            android:text="寄生检查服务点"
            android:textColor="@color/white_color"
            android:layout_marginTop="150dp"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </com.yalianxun.exhibition.widget.ScaleLayout>
    <com.yalianxun.exhibition.widget.ScaleLayout
        android:id="@+id/volunteer_train_registration"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideline"
        app:layout_constraintLeft_toRightOf="@id/volunteer_activity_registration"
        app:layout_constraintRight_toRightOf="parent">
        <View
            android:layout_margin="2dp"
            android:background="@drawable/society_old_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:contentDescription="@string/picture"
            android:src="@drawable/ic_hospital_knowledge"
            android:layout_marginTop="60dp"
            android:layout_centerHorizontal="true"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
        <TextView
            android:text="健康知识"
            android:textColor="@color/white_color"
            android:layout_marginTop="150dp"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </com.yalianxun.exhibition.widget.ScaleLayout>
    <com.yalianxun.exhibition.widget.ScaleLayout
        android:id="@+id/volunteer_team"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="@id/guideline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/guideline1"
        app:layout_constraintRight_toLeftOf="@id/volunteer_charity">
        <View
            android:layout_margin="2dp"
            android:background="@drawable/society_charity_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:contentDescription="@string/picture"
            android:src="@drawable/ic_hospital_video"
            android:layout_marginTop="60dp"
            android:layout_centerHorizontal="true"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
        <TextView
            android:text="视频宣传"
            android:textColor="@color/white_color"
            android:layout_marginTop="150dp"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </com.yalianxun.exhibition.widget.ScaleLayout>
    <com.yalianxun.exhibition.widget.ScaleLayout
        android:id="@+id/volunteer_charity"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="@id/guideline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/volunteer_team"
        app:layout_constraintRight_toRightOf="parent">
        <View
            android:layout_margin="2dp"
            android:background="@drawable/party_information_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:contentDescription="@string/picture"
            android:src="@drawable/ic_hospital_room"
            android:layout_marginTop="60dp"
            android:layout_centerHorizontal="true"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
        <TextView
            android:text="医院介绍"
            android:textColor="@color/white_color"
            android:layout_marginTop="150dp"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </com.yalianxun.exhibition.widget.ScaleLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
