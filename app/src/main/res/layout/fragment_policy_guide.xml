<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.yalianxun.exhibition.widget.ScaleLayout
        android:id="@+id/policy_map"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/policy_guide">
        <View
            android:layout_margin="2dp"
            android:background="@drawable/party_information_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/policy_map_iv"
            android:contentDescription="@string/picture"
            android:src="@drawable/ic_policy_map"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:layout_width="@dimen/big_image"
            android:layout_height="@dimen/big_image"/>
        <TextView
            android:text="政务服务地图"
            android:layout_below="@id/policy_map_iv"
            android:textColor="@color/white_color"
            android:layout_marginTop="70dp"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </com.yalianxun.exhibition.widget.ScaleLayout>
    <com.yalianxun.exhibition.widget.ScaleLayout
        android:id="@+id/policy_guide"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/policy_map"
        app:layout_constraintRight_toLeftOf="@id/policy_publicity">
        <View
            android:layout_margin="2dp"
            android:background="@drawable/policy_guide_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/policy_guide_iv"
            android:contentDescription="@string/picture"
            android:src="@drawable/ic_policy_compass"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:layout_width="@dimen/big_image"
            android:layout_height="@dimen/big_image"/>
        <TextView
            android:text="办事指南"
            android:layout_below="@id/policy_guide_iv"
            android:textColor="@color/white_color"
            android:layout_marginTop="70dp"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </com.yalianxun.exhibition.widget.ScaleLayout>
    <com.yalianxun.exhibition.widget.ScaleLayout
        android:id="@+id/policy_publicity"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/policy_guide"
        app:layout_constraintRight_toLeftOf="@id/policy_online">
        <View
            android:layout_margin="2dp"
            android:background="@drawable/policy_publicity_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/policy_publicity_iv"
            android:contentDescription="@string/picture"
            android:src="@drawable/ic_policy_publicity"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:layout_width="@dimen/big_image"
            android:layout_height="@dimen/big_image"/>
        <TextView
            android:text="政策宣传"
            android:layout_below="@id/policy_publicity_iv"
            android:textColor="@color/white_color"
            android:layout_marginTop="70dp"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </com.yalianxun.exhibition.widget.ScaleLayout>
    <com.yalianxun.exhibition.widget.ScaleLayout
        android:id="@+id/policy_online"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/policy_publicity"
        app:layout_constraintRight_toRightOf="parent">
        <View
            android:layout_margin="2dp"
            android:background="@drawable/charity_goods_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/policy_online_iv"
            android:contentDescription="@string/picture"
            android:src="@drawable/ic_policy_online_guide"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:layout_width="@dimen/big_image"
            android:layout_height="@dimen/big_image"/>
        <TextView
            android:text="在线办理指引"
            android:layout_below="@id/policy_online_iv"
            android:textColor="@color/white_color"
            android:layout_marginTop="70dp"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </com.yalianxun.exhibition.widget.ScaleLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
