<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        tools:ignore="UselessParent">
        <LinearLayout
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:clipChildren="false"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <com.yalianxun.exhibition.widget.ScaleLayout
                android:layout_weight="1"
                android:tag="first"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                tools:ignore="NestedWeights">
                <View
                    android:layout_margin="2dp"
                    android:background="@drawable/party_information_frame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:contentDescription="@string/picture"
                    android:src="@drawable/ic_party_notification"
                    android:layout_marginTop="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>
                <TextView
                    android:text="村务公开"
                    android:textColor="@color/white_color"
                    android:layout_marginTop="150dp"
                    android:textSize="20sp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </com.yalianxun.exhibition.widget.ScaleLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:clipChildren="false"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:baselineAligned="false">
                <com.yalianxun.exhibition.widget.ScaleLayout
                    android:layout_weight="1"
                    android:tag="first"
                    android:layout_width="0dp"
                    android:layout_marginEnd="5dp"
                    android:layout_height="match_parent">
                    <View
                        android:layout_margin="2dp"
                        android:background="@drawable/society_family_frame"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <ImageView
                        android:contentDescription="@string/picture"
                        android:src="@drawable/ic_society_family"
                        android:layout_marginTop="60dp"
                        android:layout_centerHorizontal="true"
                        android:layout_width="60dp"
                        android:layout_height="60dp"/>
                    <TextView
                        android:text="家庭服务"
                        android:textColor="@color/white_color"
                        android:layout_marginTop="150dp"
                        android:textSize="20sp"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </com.yalianxun.exhibition.widget.ScaleLayout>
                <com.yalianxun.exhibition.widget.ScaleLayout
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <View
                        android:layout_margin="2dp"
                        android:background="@drawable/society_charity_frame"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <ImageView
                        android:contentDescription="@string/picture"
                        android:src="@drawable/ic_society_charity"
                        android:layout_marginTop="60dp"
                        android:layout_centerHorizontal="true"
                        android:layout_width="60dp"
                        android:layout_height="60dp"/>
                    <TextView
                        android:text="慈善公益动态"
                        android:textColor="@color/white_color"
                        android:layout_marginTop="150dp"
                        android:textSize="20sp"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </com.yalianxun.exhibition.widget.ScaleLayout>

            </LinearLayout>

        </LinearLayout>
        <com.yalianxun.exhibition.widget.ScaleLayout
            android:id="@+id/main"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <View
                android:layout_margin="2dp"
                android:background="@drawable/policy_publicity_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/policy_publicity_iv"
                android:contentDescription="@string/picture"
                android:src="@drawable/ic_policy_publicity"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"
                android:layout_width="@dimen/big_image"
                android:layout_height="@dimen/big_image"/>
            <TextView
                android:text="政策宣传"
                android:layout_below="@id/policy_publicity_iv"
                android:textColor="@color/white_color"
                android:layout_marginTop="70dp"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </com.yalianxun.exhibition.widget.ScaleLayout>
        <LinearLayout
            android:layout_margin="10dp"
            android:clipChildren="false"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <com.yalianxun.exhibition.widget.ScaleLayout
                android:layout_weight="1"
                android:tag="end"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                tools:ignore="NestedWeights">
                <View
                    android:layout_margin="2dp"
                    android:background="@drawable/society_develop_frame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:id="@+id/life_maintain_iv"
                    android:contentDescription="@string/picture"
                    android:src="@drawable/ic_life_maintain"
                    android:layout_marginTop="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>
                <TextView
                    android:text="家电维修"
                    android:textColor="@color/white_color"
                    android:layout_below="@id/life_maintain_iv"
                    android:layout_marginTop="30dp"
                    android:textSize="20sp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </com.yalianxun.exhibition.widget.ScaleLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:baselineAligned="false">
                <com.yalianxun.exhibition.widget.ScaleLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_marginEnd="5dp"
                    android:layout_height="match_parent">
                    <View
                        android:layout_margin="2dp"
                        android:background="@drawable/society_old_frame"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <ImageView
                        android:contentDescription="@string/picture"
                        android:src="@drawable/ic_my_culture"
                        android:layout_marginTop="60dp"
                        android:layout_centerHorizontal="true"
                        android:layout_width="60dp"
                        android:layout_height="60dp"/>
                    <TextView
                        android:text="社区文化"
                        android:textColor="@color/white_color"
                        android:layout_marginTop="140dp"
                        android:textSize="20sp"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </com.yalianxun.exhibition.widget.ScaleLayout>
                <com.yalianxun.exhibition.widget.ScaleLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:tag="end"
                    android:layout_marginStart="5dp"
                    android:layout_height="match_parent">
                    <View
                        android:layout_margin="2dp"
                        android:background="@drawable/charity_help_frame"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <ImageView
                        android:id="@+id/life_unlock_iv"
                        android:contentDescription="@string/picture"
                        android:src="@drawable/ic_my_coalesce"
                        android:layout_marginTop="60dp"
                        android:layout_centerHorizontal="true"
                        android:layout_width="60dp"
                        android:layout_height="60dp"/>
                    <TextView
                        android:id="@+id/life_unlock_tv"
                        android:text="融合服务"
                        android:textColor="@color/white_color"
                        android:layout_below="@id/life_unlock_iv"
                        android:layout_marginTop="20dp"
                        android:textSize="20sp"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </com.yalianxun.exhibition.widget.ScaleLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
